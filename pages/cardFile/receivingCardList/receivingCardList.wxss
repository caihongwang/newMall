@import "../../../app.wxss";
/* 以下为zg已经使用的 */
.list-view {
  /* background-color: red; */
  height: 100%;
}
.waiting-receive-view {
  height: 96rpx;
  background-color: #F3FFF3;
}
.center-content-view {
  text-align: center;
  vertical-align: middle;
  height: 100%;
  width: 100%;
}
.mini-card-image {
  width: 32rpx;
  height: 22rpx;
}
.waitting-receive-label {
  line-height: 96rpx;
  font-family: PingFang-SC-Medium;
  font-size: 28rpx;
  text-align: center;
  color: #09BB07;
  letter-spacing: 0.5px;
}
.card-cell {
  background-color: #fff;
  display: flex;
  display: -webkit-flex;
  padding: 40rpx 40rpx;
  height: 116rpx;
  border-bottom:1rpx solid #eee;
}
.card-cell:last-child {
  border-bottom: 1rpx solid #fff;
}
.card-cell .left {
  width: 112rpx;
  height: 112rpx;
}
.card-cell .middle {
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  padding: 0 16rpx;
  width: 430rpx;
}
.receive-card-button::after{
  border: 0;

}
 .receive-card-button {
  background: #FFFFFF;
  border: 1px solid #09BB07;
  font-size: 20rpx;
  color: #09BB07;
  /* height: 52rpx; */
  /* line-height: 50rpx; */
  /* width: 88rpx; */
  padding: 0rpx 24rpx;
}
/* .card-cell .right {
  background-color: rebeccapurple
} */
.card-cell .left image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.middle .i-name {
  font-family: PingFang-SC-Bold;
  font-size: 28rpx;
  color: #353535;
}
.middle .i-job {
  font-family: PingFang-SC-Regular;
  font-size: 20rpx;
  color: #888888;
  letter-spacing: 0.2rpx;
  margin-top: 4rpx;
  /* text-align: center; */
}
.middle .i-company {
  font-family: PingFang-SC-Regular;
  font-size: 20rpx;
  color: #888888;
   margin-top: 4rpx;

  letter-spacing: 0.2rpx;
}
.no-receive{
  margin: 0 auto;
  padding-top: 376rpx;
  font-family: PingFang-SC-Bold;
  font-size: 36rpx;
  color: #888888;
  letter-spacing: 1rpx;
  text-align: center;
}