.button{
  width: 670rpx;
  height: 88rpx;
  background-color: #09BB07;
  border-radius: 8rpx;
  color: #fff;
}
.open-content{
  display: flex;
  display: -webkit-flex;
  align-items:flex-start;
  margin-top: 12rpx;
  color: #888;
}
.open-left{
  width: 120rpx;
}
.open-right{
  width: 466rpx;
  word-break:break-all;
}
