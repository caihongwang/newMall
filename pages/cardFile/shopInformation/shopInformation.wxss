/* pages/cardFile/shopInformation/shopInformation.wxss */
@import "../../../app.wxss";

.warp {
  height: 100%;
  width: 100%;
  background: #f8f8f8;
}

.swiper {
  width: 100%;
  height: 300rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.shopHeadView {
  border: 0rpx red solid;
  height: 170rpx;
  width: 100%;
  background: #fff;
  align-items: center; /** 垂直居中*/
  display: flex;
  justify-content: center; /** flex 属性， 水平居中**/
  margin-top: 20rpx;
}

.shopHeadImgView {
  border: 0rpx red solid;
  width: 140rpx;
  height: 140rpx;
  margin-left: 20rpx;
}

.shopHeadImg {
  border: 0rpx red solid;
  width: 140rpx;
  height: 140rpx;
  border-radius: 15rpx;
}

.shopTitleAndHotAndDistanceView {
  border: 0rpx red solid;
  width: 100%;
  align-items: center; /** 垂直居中*/
  margin-left: 20rpx;
}

.shopTitleView {
  color: #2d2d2d;
  font-weight: bold;
}

.shopHotAndDistanceView {
  align-items: center; /** 垂直居中*/
  display: flex;
  justify-content: left; /** flex 属性， 水平居中**/
  margin-top: 20rpx;
}

.shopHotView {
  border: 0rpx red solid;
  align-items: center; /** 垂直居中*/
  display: flex;
  justify-content: center; /** flex 属性， 水平居中**/
}

.hotDegreeImg {
  border: 0rpx red solid;
  width: 50rpx;
  height: 50rpx;
}

.shopHotTextView {
  border: 0rpx red solid;
  margin-left: 20rpx;
  margin-top: 20rpx;
  font-weight: bold;
}

.shopDistanceView {
  border: 0rpx red solid;
  align-items: center; /** 垂直居中*/
  display: flex;
  justify-content: center; /** flex 属性， 水平居中**/
  margin-left: 150rpx;
}

.distanceImg {
  border: 0rpx red solid;
  width: 50rpx;
  height: 50rpx;
}

.shopDistanceTextView {
  margin-left: 20rpx;
  margin-top: 20rpx;
  font-weight: bold;
}

.shopDigistView {
  background: #fff;
  margin-top: 18rpx;
  padding: 24rpx;
  display: flex;
  -webkit-display: flex;
  font-size: 28rpx;
}

.shopDigistName {
  width: 20%;
  color: #4a4a4a;
}

.shopDigistContent {
  width: 80%;
}

.itemView {
  height: 80rpx;
  background: #fff;
  font-size: 28rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.itemName {
  width: 662rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #4a4a4a;
}

.itemContent {
}

.itemLogoImg {
  width: 45rpx;
  height: 45rpx;
  margin-left: 20rpx;
}

.payBtn {
  width: 90%;
  margin: 40rpx auto 40rpx;
}
