/* pages/cardFile/payment/payment.wxss */
@import "../../../app.wxss";
.warp{
  width: 100%;
  height: 100%;
  background: #f8f8f8
}
.pay-type{
  background: #fff;
  font-size: 34rpx;

}
.pay-warp{
  padding: 24rpx;
}
.pay-image{
  width: 80rpx;
  height: 80rpx;
  margin-right: 30rpx;
}
.pay-text{
  width: 560rpx;
}
.pay-text1{
  width: 180rpx;
}
.can-use{
  color: #FF4C4B;
  width: 360rpx;
  text-align: right;
}
.image-choose{
   width: 60rpx;
  height: 60rpx;
  float: right;
}

.pay-money{
  background: #fff;
  margin-top: 36rpx;
  font-size: 28rpx;
}
.money-text{
  padding: 24rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #e2e2e2;
}
.imput-warp{
  padding: 24rpx;
}

.input-money{
  width: 86%;
  height: 80rpx;
  border: 1px solid #e2e2e2;
  margin: 36rpx auto;
  border-radius: 10rpx;
  padding: 0 24rpx;
}

.case-input{
  width: 80rpx;
  border: 1px solid #e2e2e2;
  border-radius: 4rpx;
}
.arrive-money{
  width: 200rpx;
  text-align: right;
}
.express{
  margin: 24rpx auto;
}
.actual-payment{
  text-align: right;
}
.actual-text{
  color: #FF4C4B;
}

.agreement{
  padding: 24rpx;
}
.image-agreement{
  width: 40rpx;
  height: 40rpx;
}
.agreement-text{
  margin: 0 24rpx;
  font-size: 24rpx;
}
.open-rule{
  color: #FF4C4B;

}