@import "../../../app.wxss";
/*授权弹窗 */
.authorizationView{
  position: fixed;
  width: 100%;
  height: 100%;
  right: 0;
  top: 0;
  z-index: 1000;
  background: #fff; 
  align-items: center; /** 垂直居中*/
}
.authorizationImg{
  border: 0px red solid;
  display: block;
  width: 130rpx;
  height: 130rpx;
  margin: 100rpx auto 0;
  padding-top: 15%;
}
.authorizationTxt{
  border: 0px red solid;
  padding: 15% 100rpx;
  font-size: 32rpx;
  text-align: center;
  color: #5f5656;
}
.getUserInfoBtn{
  width: 75%;
}
/* 排序 */
.sortTypeView{
  position: fixed;
  left: 0;
  top: 0;
  z-index: 100;
  width: 100%;
  height: 70rpx;
  border: 0px red solid;
  background: #FFF;
  border-bottom: 2px solid #e2e2e2;
  align-items: center; /** 垂直居中*/
  display: flex;
  justify-content: center; /** flex 属性， 水平居中**/
}
.sortTypeItemView{
  border: 0px #e2e2e2 solid;
  width: 50%;
  height: 100%;
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #4a4a4a;
  align-items: center; /** 垂直居中*/
  display: flex;
  justify-content: center; /** flex 属性， 水平居中**/
}
.sortTypeItem{
  align-items: center; /** 垂直居中*/
  display: flex;
  justify-content: center; /** flex 属性， 水平居中**/
}
.select-sortTypeItem{
  font-weight: bold;
}
.downArrowImg{
  width: 20rpx;
  height: 20rpx;
  margin-left: 10rpx;
}
/* 商家列表数据 */
.shopList{
  width: 100%;
  height: 90%;
  margin-top: 70rpx;
}
.shopListItem{
  border: 0rpx red solid;
  height: 200rpx;
  width: 100%;
  border-bottom: 2rpx solid #e2e2e2;
  align-items: center; /** 垂直居中*/
  display: flex;
  justify-content: center; /** flex 属性， 水平居中**/
}
.shopHeadImgView{
  border: 0rpx #B2B2B2 solid;
  width: 150rpx;
  height: 150rpx;
  align-items: center; /** 垂直居中*/
  display: flex;
  justify-content: center; /** flex 属性， 水平居中**/
  margin-left: 20rpx;
}
.shopHeadImg{
  width: 150rpx;
  height: 150rpx;
  border-radius: 20rpx;
}
.shopDesc{
  border: 0rpx red solid;
  width: 85%;
  height: 150rpx;
  align-items: center; /** 垂直居中*/
  padding-top: 10rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.shopTitleAndDistanceView{
  border: 0px red solid;
  align-items: center; /** 垂直居中*/
  display: flex;
  justify-content: center; /** flex 属性， 水平居中**/
}
.shopTitleView{
  border: 0px red solid;
  width: 80%;
}

.shopDistanceView{
  border: 0px red solid;
  color: #B2B2B2;
  width: 20%;
  text-align: right
}

.shopDegist{
  border: 0px red solid;
  color: #B2B2B2;
  width: 100%;
  height: 60rpx;
  margin-top: 5rpx;
}
.shopTitleAndOrderAmountView{
  border: 0px red solid;
  margin-top: 5rpx;
  height: 45rpx;
  width: 100%;
  align-content: center; /** 垂直居中*/
  display: flex;
  justify-content: center; /** flex 属性， 水平居中**/
}
.priceView{
  border: 0px red solid;
  width: 50%;
  height: 45rpx;
  line-height: 45rpx;  
  align-content: center; /** 垂直居中*/
  display: flex;
  justify-content: left; /** flex 属性， 水平居中**/
}
.redMoneyLogoView{
  border: 0px red solid;
  width: 25rpx;
  height: 25rpx;
}
.redMoneyLogoImg{
  border: 0px red solid;
  width: 25rpx;
  height: 25rpx;
}
.priceTxt{
  border: 0px red solid;
  color: #C63420;
  margin-left: 5rpx;
  font-weight: bold;
}
.priceSufTxt{
  border: 0px red solid;
  height: 45rpx;
  line-height: 60rpx;  
  margin-left: 8rpx;
  color: #B2B2B2;
}
.orderAmountView{
  border: 0px red solid;
  width: 50%;
  height: 45rpx;
  line-height: 45rpx;  
  text-align: right;
}
.orderAmountText{
  color: #B2B2B2;
}

/* 底部 */
.footView{
  border: 0px red solid;
  width: 100%;
  height: 106rpx;
  line-height: 106rpx;
}
.add-more{
  opacity: 0.4;
  font-family: PingFangSC-Regular;
  color: #9D9D9D;
  letter-spacing: 0;
  text-align: center;
  /* margin-top: 30rpx; */
}