@import "../../../app.wxss";
/*授权弹窗 */
.authorizationView{
  position: fixed;
  width: 100%;
  height: 100%;
  right: 0;
  top: 0;
  z-index: 1000;
  background: #fff; 
  align-items: center; /** 垂直居中*/
}
.authorizationImg{
  border: 0px red solid;
  display: block;
  width: 130rpx;
  height: 130rpx;
  margin: 100rpx auto 0;
  padding-top: 15%;
}
.authorizationTxt{
  border: 0px red solid;
  padding: 15% 100rpx;
  font-size: 32rpx;
  text-align: center;
  color: #5f5656;
}
.getUserInfoBtn{
  width: 75%;
}
/* 排序 */
.sortTypeView{
  position: fixed;
  left: 0;
  top: 0;
  z-index: 100;
  width: 100%;
  height: 80rpx;
  border: 0px red solid;
  background: #FFF;
  border-bottom: 3px solid #e2e2e2;
  align-items: center; /** 垂直居中*/
  display: flex;
  justify-content: center; /** flex 属性， 水平居中**/
}
.sortTypeItem{
  border: 1px #e2e2e2 solid;
  width: 50%;
  height: 80rpx;
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #4a4a4a;
  align-items: center; /** 垂直居中*/
  display: flex;
  justify-content: center; /** flex 属性， 水平居中**/
}
/* 商家列表数据 */
.shopList{
  width: 100%;
  height: 90%;
  margin-top: 85rpx;
}
.shopListItem{
  border: 0rpx red solid;
  height: 220rpx;
  border-bottom: 2rpx solid #e2e2e2;
  align-items: center; /** 垂直居中*/
  display: flex;
  justify-content: center; /** flex 属性， 水平居中**/
}
.shopHeadImgView{
  border: 0px red solid;
  width: 200rpx;
  height: 200rpx;
  align-items: center; /** 垂直居中*/
  display: flex;
  justify-content: center; /** flex 属性， 水平居中**/
}
.shopHeadImg{
  width: 190rpx;
  height: 190rpx;
}
.shopDesc{
    align-items: center; /** 垂直居中*/
    padding-top: 10rpx;
    padding-left: 20rpx;
}
.shopTitle{
  font-size: 32rpx;
}
.shopStar{
  font-size: 30rpx;
  margin-top: 10rpx;
}
.hotDegreeAndDistance{
  border: 0px red solid;
  margin-top: 10rpx;
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  justify-content: center; /** flex 属性， 水平居中**/
}
.hotDegreeView{
  border: 0px red solid;
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;  
  align-content: l; /** 垂直居中*/
  display: flex;
  justify-content: left; /** flex 属性， 水平居左**/
}
.hotDegreeImg{
  width: 50rpx;
  height: 50rpx;
}
.hotDegreeTxt{
  font-size: 28rpx;
  color: #FF4C4B;
  margin-left: 10rpx;
}
.distanceView{
  border: 0px red solid;
  width: 300rpx;
  height: 60rpx;
  line-height: 60rpx;  
  align-items: center; /** 垂直居中*/
  display: flex;
  justify-content: left; /** flex 属性， 水平居左**/
}
.distanceImg{
  width: 50rpx;
  height: 48rpx;
}
.distanceTxt{
  font-size: 28rpx;
  color: rgb(1, 1, 1);
  margin-left: 10rpx;
}
/* 底部 */
.footView{
  border: 0px red solid;
  width: 100%;
  height: 106rpx;
  line-height: 106rpx;
}
.add-more{
  opacity: 0.4;
  font-family: PingFangSC-Regular;
  color: #9D9D9D;
  letter-spacing: 0;
  text-align: center;
  /* margin-top: 30rpx; */
}