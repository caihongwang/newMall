/* 排序 */
.sortTypeView{
  position: fixed;
  left: 0;
  top: 0;
  z-index: 100;
  width: 100%;
  height: 80rpx;
  border: 0px red solid;
  background: #FFF;
  border-bottom: 3px solid #e2e2e2;
  align-items: center; /** 垂直居中*/
  display: flex;
  justify-content: center; /** flex 属性， 水平居中**/
}
.sortTypeItem{
  border: 1px #e2e2e2 solid;
  width: 50%;
  height: 80rpx;
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #4a4a4a;
  align-items: center; /** 垂直居中*/
  display: flex;
  justify-content: center; /** flex 属性， 水平居中**/
}
