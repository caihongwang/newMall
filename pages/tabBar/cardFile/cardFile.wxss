}
.hot{
  margin-top: 34rpx;
   height: 60rpx;
  line-height: 60rpx;
}
.hot-left{
   width: 220rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.hot-image{
  width: 60rpx;
  height: 60rpx;
}
.how-hot{
  font-size: 28rpx;
  color: #FF4C4B;

}
.hot-right{
  font-size: 28rpx;
  color: #727272;
