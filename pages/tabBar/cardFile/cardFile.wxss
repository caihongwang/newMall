@import "../../../app.wxss";
page{
  background: #e2e2e2 !important;
  height: 100%;
}
/* 头部 */

.warp{
  background: #E2E2E2;
}
.head{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: #fff;
  padding:  0 48rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}
.back-map{
  height: 50rpx;
  line-height: 50rpx;
  border: 1px solid #e2e2e2;
  padding: 8rpx;
  font-size: 24rpx;
  color: #e2e2e2;
}

/* 列表名 */
.tab{
  width: 100%;
  height: 80rpx;
  margin-top: 10rpx;
  background: #fff;
  font-size: 28rpx;
  color: #e2e2e2;
}
.class::after {
  margin-right: 10rpx;
  content: '\e680';
  font-family: 'iconfont';
  font-size: 24rpx;
}

/* 列表数据 */
.list{
  margin-top: 4rpx;
  /* background: #fff; */
  background: #e2e2e2;
  width: 100%;
  min-height: 938rpx;
}


.list-content{
  height: 260rpx;
  background: #fff;
  border-bottom: 2rpx solid #e2e2e2;
  padding: 32rpx 24rpx 50rpx 24rpx;
  box-sizing: border-box;
}
.image-warp{
   width: 200rpx;
  height: 176rpx;
  position: relative;
  left: 0;
  top: 0;
  margin-right: 36rpx;
}
.image-top{
  position: absolute;
  left: 0;
  top: 0;
  width: 140rpx;
  height: 130rpx;
}
.list-image{
  margin-top: 26rpx;
  width: 200rpx;
  height: 150rpx;
}
.list-name{
  font-size: 32rpx;
}
.hot{
  margin-top: 46rpx;
   height: 60rpx;
  line-height: 60rpx;
}
.hot-left{
   width: 250rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.hot-image{
  width: 60rpx;
  height: 60rpx;
}
.how-hot{
  font-size: 28rpx;
  color: red;

}
.hot-right{
  font-size: 28rpx;
  color: #e2e2e2;
}
.list-content:last-child{
  border: none;
}
.click-hover{
  /* background: red; */
   background: #F8F8F8; 
}
