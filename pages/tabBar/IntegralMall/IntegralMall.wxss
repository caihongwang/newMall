/* pages/tabBar/IntegralMall/IntegralMall.wxss */
@import "../../../app.wxss";

page {
  background: #f8f8f8 !important;
}

.input-warp {
  background: #1e90ff;
  height: 120rpx;
  padding: 0 48rpx;
}

.seach-input {
  line-height: 100rpx;
  background: #f2f2f2;
  display: flex;
  display: -webkit-flex;
  justify-content: flex-start;
  align-items: center;
}

.search-img {
  width: 40rpx;
  height: 40rpx;
  margin-left: 33rpx;
}

.input {
  width: 350rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-family: SourceHanSansSC-Regular;
  font-size: 28rpx;
  color: #353535;
  letter-spacing: 0;
  background: #f2f2f2;
  padding: 0 24rpx 0 4rpx;
}

.palce {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #999;
  letter-spacing: -0.28rpx;
}

.sure-search {
  width: 120rpx;
  height: 76rpx;
  line-height: 76rpx;
  color: #fff;
  background: rgb(0, 89, 255);
  font-size: 28rpx;
  margin-left: 54rpx;
}

.banner {
  width: 100%;
  height: 400rpx;
}

.productTypeAndProductListView {
  border: 0px red solid;
  background: #fff;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 5rpx solid #e2e2e2;
}

.productTypeView {
  /* border: 0px red solid; */
  white-space: nowrap;
  overflow: auto;
  padding: 0 10rpx;
  /* align-items: center; */
  /* display: flex;
  justify-content: center; */
}

.productTypeText {
  display: inline-block;
  /* border: 1px red solid; */
  /* width: 100rpx; */
  height: 80rpx;
  line-height: 80rpx;
  align-items: center;
  padding: 4rpx 30rpx;
  /* text-align: center; */
}

.active-productTypeText {
  background: #f2f2f2;
  border-radius: 40rpx;
  color: black;
  text-align: center;
}

.list-warp {
  padding: 48rpx 24rpx;
}

.list {
  display: inline-block;
  width: 334rpx;
  height: 460rpx;
  background: #fff;
  margin-top: 24rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.active {
  margin-right: 24rpx;
}

.list-image {
  display: block;
  width: 240rpx;
  height: 260rpx;
  margin: 30rpx auto 0;
}

.describe {
  font-size: 24rpx;
  color: #2d2d2d;
  margin-top: 8rpx;
}

.price {
  font-size: 28rpx;
  color: #ff4c4b;
  margin-top: 24rpx;
}
