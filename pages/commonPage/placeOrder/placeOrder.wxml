<!--pages/commonPage/placeOrder/placeOrder.wxml-->
<view class='address flex' bindtap='goAddress'>
   <image class='address-icon' src="/images/logo.png"></image>
   <view class='address-detail'>
      <view wx:if="{{!name}}" class='name fz-28'>未有收货地址</view>
       <view wx:if="{{name}}" class='name fz-28'>{{name}}</view>
      <view wx:if="{{!address}}" class='address-choose fz-24'>请选择收货地址</view> 
       <view wx:if="{{address}}" class='address-choose fz-24'>{{address}}</view>
   </view>
   <image class='address-right' src="/images/logo.png"></image>
</view>

<view class='address1 flex'>
   <image class='goods-icon' src="/images/logo.png"></image>
   <view class='goods-detail '>
     <view class='good-name flex fz-28'>
       <view class='good'>{{name}}</view>
        <view class='good-price'>￥{{price}}</view>

     </view>
        <view class='good-name flex fz-28'>
       <view class='good'> <text class='rule'>规格：</text>{{name}}</view>
        <view >￥{{price}}</view>
     </view>
        <view class='fz-28 class="number"'>×5</view>
   </view>
</view>


<view class='foot flex'>
 <view class='foot-price'>合计：￥{{price}}+{{price}}积分</view>
 <view class='sure-pay' bindtap='surePay'>确认并支付</view>
</view>


