/* pages/commonPage/addAddress/addAddress.wxss */
@import "../../../app.wxss";

page {
  background: #f8f8f8 !important;
}

.warp-padding:last-child {
  border: none;
}

.input-warp {
  border: 0rpx red solid;
  background: #fff;
  height: 80rpx;
  border-bottom: 1px solid #e2e2e2;
  align-items: center; /** 垂直居中*/
  display: flex;
  justify-content: center; /** flex 属性， 水平居中**/
}

.name {
  border: 0rpx red solid;
  width: 25%;
  align-items: center; /** 垂直居中*/
  text-align: right;
}

.input {
  border: 0rpx red solid;
  width: 70%;
  align-items: center; /** 垂直居中*/
  display: flex;
  justify-content: left; /** flex 属性， 水平居中**/
  text-align: left;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

picker {
  width: 75%;
}

.pickerView {
  border: 0rpx red solid;
  width: 100%;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.clear {
  width: 30rpx;
  height: 30rpx;
}

.place {
  color: #e2e2e2;
}

.address-detail {
  border: 0rpx red solid;
  width: 25%;
  align-items: center; /** 垂直居中*/
  text-align: right;
}

.textarea {
  border: 0rpx red solid;
  width: 70%;
  text-align: left;
  margin-top: 5rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.setDefaultAddressView {
  border: 0rpx red solid;
  width: 95%;
  align-items: center; /** 垂直居中*/
  display: flex;
  justify-content: right; /** flex 属性， 水平居中**/
  text-align: right;
}

.switchDefaultAddressView {
  border: 0rpx red solid;
  width: 100rpx;
  align-items: center; /** 垂直居中*/
  display: flex;
  justify-content: right; /** flex 属性， 水平居中**/
  text-align: right;
  margin-left: 20rpx;
}

.btnView{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 250rpx;
  color: #fff;
  padding-bottom: 10rpx;
}




.sure {
  width: 702rpx;
  margin: 24rpx auto;
}

.delete {
  margin-bottom: 64rpx;
}

.input-warp1 {
  background: #fff;
  min-height: 120rpx;
  border-bottom: 1px solid #e2e2e2;
}
