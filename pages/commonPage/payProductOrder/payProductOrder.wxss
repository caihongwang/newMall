/* pages/commonPage/placeOrder/placeOrder.wxss */
@import "../../../app.wxss";
page{
  background: #f8f8f8 !important;
}
.addressView{
  border: 0rpx red solid;
  width: 100%;
  height: 140rpx;
  background: #fff;  
  align-items: center; /** 垂直居中*/
  display: flex;
  justify-content: center; /** flex 属性， 水平居中*/
}
.addressLogoImg{
  border: 0rpx red solid;
  width: 60rpx;
  height: 60rpx;
  margin-left: 20rpx;
}
.addressDetailView{
  border: 0rpx red solid;
  width: 90%;
  height: 110rpx;
  align-items: center; /** 垂直居中*/
  display: flex;
  justify-content: left; /** flex 属性， 水平居中*/
  margin-left: 15rpx;
  margin-right: 15rpx;
}
.addressNameAndPhoneView{
  /* font-weight: bold; */
  color: rgb(1, 1, 1);
}
.addressDetailInfoView{
  color: #727272;
}
.rightArrowImg{
  border: 0rpx red solid;
  width: 60rpx;
  height: 60rpx;
  margin-left: 15rpx;
  margin-right: 5rpx;
}

.productView{
  background: #fff;
  margin-top: 24rpx;
  padding: 24rpx;
  align-items: center; /** 垂直居中*/
  display: flex;
  justify-content: center; /** flex 属性， 水平居中*/
}
.productHeadImg{
  width: 140rpx;
  height: 140rpx;
}
.productDetailInfoView{
  width: 80%;
  margin-left: 15rpx;
  color: #2D2D2D;
}
.productTitleAndPriceView{
border: 0rpx red solid;
  height: 45rpx;
  align-items: center; /** 垂直居中*/
}
.productTitleView{
  font-weight: bold;
  color: #2D2D2D;
}
.productPriceView{
  color: #FF4C4B;
  /* font-weight: bold; */
}

.productDegistAndIntegralView{
  border: 0rpx red solid;
  height: 45rpx;
  align-items: center; /** 垂直居中*/
}
.productDegistView{
  color: #B2B2B2;
}
.productIntegralView{
  color: #FF4C4B;
  font-weight: bold;
}

.productNumView{
border: 0rpx red solid;
  height: 45rpx;
  align-items: center; /** 垂直居中*/
}
.productNumView{
  font-weight: bold;
}
.productIntegralView{
  color: #FF4C4B;
  font-weight: bold;
}

.foot{
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
}
.foot-price{
  margin-left: 24rpx;
}
.integralAndPriceView {
  color: #ff4c4b;
  font-weight: bold;
  text-align: left;
}
.sure-pay{
  width: 260rpx;
  height: 100rpx;
  line-height: 100rpx;
  background: #FF4C4B;
  color: #fff;
  text-align: center;
}