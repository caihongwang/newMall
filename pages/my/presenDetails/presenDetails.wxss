/* pages/my/presenDetails/presenDetails.wxss */
@import "../../../app.wxss";
page{
  background: #f8f8f8 !important;
}
.degistView{
   position: fixed;
  right: 0;
  top: 0;
  z-index: 1000;
  background: #E7924D;
  width: 100%;
  height: 150rpx;
  align-items: center; /** 垂直居中*/
  display: flex;
  justify-content: left; /** flex 属性， 水平居中**/
}
.degistTxtView{
  border: 0px red solid;
  width: 75%;
  color: #FFF;
  font-weight: bold;
  align-items: center; /** 垂直居中*/
  padding: 5rpx 20rpx;
}
.degistTxt_1{
  border: 0px green solid;
  width: 100%;
  font-size: 100%;
}
.degistTxt_2{
  border: 0px yellow solid;
  width: 100%;
  font-size: 70%;
}
.degistTxt_3{
  border: 0px yellow solid;
  width: 100%;
  font-size: 70%;
}
.accountStatemenView{
  border: 0px red solid;
  width: 25%;
  align-items: center; /** 垂直居中*/
  display: flex;
  justify-content: center; /** flex 属性， 水平居中**/
  padding: 5rpx 20rpx;
}
.accountStatementImg{
  width: 100rpx;
  height: 100rpx;
}
/* 提现列表 */
.casheView{
  margin-top: 150rpx;
}
.cashedListView{
  border: 0px red solid;
  padding: 5rpx 20rpx;
}
.cashedItemView{
  border: 0px red solid;
  width: 100%;
  height: 170rpx;
  align-items: center; /** 垂直居中*/
  display: flex;
  justify-content: center; /** flex 属性， 水平居中**/
  border-bottom: 2px solid #e2e2e2;
  padding-bottom: 10rpx;
}
.cashImgView{
  border: 0px red solid;
  width: 100rpx;
  height: 100rpx;
}
.cashImg{
  border: 0px red solid;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50% 50%;
}
.cashedTxtView{
  border: 0px red solid;
  align-items: center; /** 垂直居中*/
}
.fromTxtAndMonneyView{
  width: 100%;
  font-size: 80%;
  align-items: center; /** 垂直居中*/
  display: flex;
  justify-content: left; /** flex 属性， 水平居中**/
}
.fromTxtView{
  border: 0px red solid;
  width: 70%;
  text-align: left;
  padding-left: 3%;
}
.moneyView{
  border: 0px red solid;
  width: 30%;
  text-align: right;
  font-weight: bold;
  color: #C0A75A;
}
.createTimeView{
  border: 0px red solid;
  font-size: 60%;
  color: #B2B2B2;
  align-items: center; /** 垂直居中*/
  padding-left: 3%;
  text-align: left;
  padding-top: 6rpx;
}
.remarkView{
  border: 0px red solid;
  font-size: 20rpx;
  color: rgb(110, 108, 108);
  align-items: center; /** 垂直居中*/
  padding-left: 3%;
  text-align: left;
  padding-top: 6rpx;
}
/* 底部 */
.footView{
  border: 0px red solid;
  width: 100%;
  height: 106rpx;
  line-height: 106rpx;
}
.add-more{
  opacity: 0.4;
  font-family: PingFangSC-Regular;
  color: #9D9D9D;
  letter-spacing: 0;
  text-align: center;
  /* margin-top: 30rpx; */
}