/* pages/my/integralRecord/integralRecord.wxss */
@import "../../../app.wxss";
page{
  background: #f8f8f8 !important;
}
.thePage{
  align-items: center; 
}
.myBalanceView{
  border: 0rpx red solid;
  width: 100%;
  height: 260rpx;
  align-items: center; /** 垂直居中*/
  margin-top: 20rpx;
}
.myBalanceImgView{
  border: 0rpx red solid;
  width: 100%;
  height: 120rpx;  
  align-items: center; /** 垂直居中*/
  display: flex;
  justify-content: center; 
}
.myBalanceImg{
  border: 0rpx red solid;
  width: 120rpx;
  height: 120rpx;
}
.myBalanceTextView{
  border: 0rpx red solid;
  width: 100%;
  height: 50rpx;
  align-items: center; /** 垂直居中*/
  display: flex;
  justify-content: center; 
  padding-top: 20rpx;
}
.myBalanceMoneyView{
  border: 0rpx red solid;
  width: 100%;
  height: 80rpx;
  font-weight: bold;
  align-items: center; /** 垂直居中*/
  display: flex;
  justify-content: center; 
}
.allMyBalanceListView{
  border: 0rpx red solid;
  width: 100%;
  height: 80%;
}
.myBalanceRecordDescView{
  border: 0rpx red solid;
  width: 100%;
  height: 100rpx;
  align-items: center; /** 垂直居中*/
  display: flex;
  justify-content: center; 
}
.recordLogoImg{
  width: 40rpx;
  height: 40rpx;  
}
.recordDescView{
  color: #B2B2B2;
}
.myBalanceListView{
  background: #fff;
  padding: 20rpx;
  border-bottom: 1px solid #AFAFAF;
}
.myBalanceItemView{
  width: 100%;
  height: 130rpx;
  align-items: center; /** 垂直居中*/
  display: flex;
  justify-content: center; 
}
.balanceRecordLogoImgView{
  border: 0rpx red solid;
  width: 10%;
  height: 60rpx;
  align-items: center; /** 垂直居中*/
  display: flex;
  justify-content: center; 
}
.balanceRecordLogoImg{
  width: 60rpx;
  height: 60rpx;
}
.myBalanceDetailView{
  border: 0rpx red solid;
  width: 90%;
}

.fromLuckDrawAndMoneyView{
  width: 100%;
  font-size: 80%;
  align-items: center; /** 垂直居中*/
  display: flex;
  justify-content: left; /** flex 属性， 水平居中**/
}
.fromLuckDrawDescView{
  border: 0px red solid;
  width: 70%;
  text-align: left;
  padding-left: 3%;
}
.moneyView{
  border: 0px red solid;
  width: 30%;
  text-align: right;
  font-weight: bold;
  color: green;
}
.createTimeView{
  border: 0px red solid;
  color: #B2B2B2;
  align-items: center; /** 垂直居中*/
  padding-left: 3%;
  text-align: left;
  padding-top: 6rpx;
}
.remarkView{
  border: 0px red solid;
  color: rgb(110, 108, 108);
  align-items: center; /** 垂直居中*/
  padding-left: 3%;
  text-align: left;
  padding-top: 6rpx;
}

.no-record{
  text-align: center;
  margin-top: 48rpx;
  color: #fff;
}
/* 底部 */
.footView{
  border: 0px red solid;
  width: 100%;
  height: 106rpx;
  line-height: 106rpx;
}
.add-more{
  opacity: 0.4;
  font-family: PingFangSC-Regular;
  color: #9D9D9D;
  letter-spacing: 0;
  text-align: center;
}