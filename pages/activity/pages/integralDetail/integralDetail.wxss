/* 无积分未参团的状态 */
.no-integral{
  height: 100%;
  width: 100%;
  background: #fff;
}
.integral{
font-family: PingFangSC-Semibold;
font-size: 72rpx;
color: #7964F4;
letter-spacing: 0;
text-align: center;
padding-top: 104rpx;
}
.no-user-integral{
  font-family: PingFangSC-Regular;
color: #353535;
letter-spacing: -0.4rpx;
text-align: center;
line-height: 44rpx;
margin-top: 44rpx;
}
